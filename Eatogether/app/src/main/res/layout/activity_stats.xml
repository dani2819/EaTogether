<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_stats"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="com.applicoders.msp_2017_project.eatogether.StatsActivity"
    android:weightSum="1">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upcoming Hosted Meals"
        android:padding="15dp"
        android:textColor="#FFFF"
        android:textSize="20sp"
        android:id="@+id/textView"
        android:background="#00796b"/>

    <ListView
        android:id="@+id/upComingHostList"
        android:layout_width="match_parent"
        android:layout_height="206dp">
    </ListView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Previous Hosting"
        android:padding="15dp"
        android:layout_marginTop="8dp"
        android:textColor="#FFFF"
        android:textSize="20sp"
        android:background="#00796b"/>
    </ScrollView>
    <ListView
        android:id="@+id/previousHostList"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>



</LinearLayout>

