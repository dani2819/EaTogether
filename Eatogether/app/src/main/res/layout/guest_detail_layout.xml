<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="1000dp"
    android:minHeight="450dp"
    android:padding="16dp"
    android:orientation="vertical"
    android:gravity="center">

    <ProgressBar
        android:id="@+id/guest_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/guest_popup_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:background="@drawable/close_dialog"
        android:id="@+id/dismiss"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/food_host_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/default_profile_image"
                app:civ_border_width="0.5dp"
                app:civ_border_color="@color/primary_dark"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/guest_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Rafay Khan"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>


            <TextView
                android:id="@+id/guest_full_JoinDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Joined: 01 June 2016"
                android:textSize="15dp"
                android:layout_gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryDark"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/guest_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="10dp"
                android:inputType="textMultiLine"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Telephone"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/guest_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+123456789"
                android:textSize="10dp"
                android:inputType="textMultiLine"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/guest_remove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove Guest"
        android:layout_marginTop="10dp"/>
    </LinearLayout>
</LinearLayout>