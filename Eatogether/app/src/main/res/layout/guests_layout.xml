<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="#FFFF">

    <LinearLayout
        android:id="@+id/guest_main_holder"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:onClick="onGuestItemClick">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/food_host_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/food_image"
            app:civ_border_width="0.5dp"
            app:civ_border_color="@color/primary_dark"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/guest_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rafay"
            android:gravity="center"
            android:inputType="textMultiLine"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/guest_join_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Joined: 12/04/2017"/>

    </LinearLayout>
</LinearLayout>